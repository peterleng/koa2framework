<%- include('../common/header', {'title': '添加新闻','nav':'news'} ) %>

<div class="wrapper marginAuto">
    <div class="col-lg-8">
        <form class="form-horizontal login-form" action="/news/save" method="post">
            <input type="hidden" name="id" value="<%= newsinfo.id %>">
            <div class="form-group">
                <label class="col-lg-2 control-label">标题</label>
                <div class="col-lg-8">
                    <input type="text" name="title" class="form-control" placeholder="标题" value="<%= newsinfo.title %>">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">作者</label>
                <div class="col-lg-3">
                    <input type="text" name="author" class="form-control" placeholder="作者" value="<%= newsinfo.author %>">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">简介</label>
                <div class="col-lg-6">
                    <textarea class="form-control" name="summary" cols="20" rows="4"><%= newsinfo.summary %></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">内容详情</label>
                <div class="col-lg-8">
                    <textarea class="form-control" name="content" cols="20" rows="10"><%= newsinfo.content %></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">状态</label>
                <div class="col-lg-8">
                    <label>
                        <input type="radio" name="status" value="0" <% if(newsinfo.status == 0){%> checked <% } %>>
                        隐藏
                    </label>

                    <label>
                        <input type="radio" name="status" value="1" <% if(newsinfo.status == 1){%> checked <% } %>>
                        显示
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-2"></div>
                <div class="col-lg-4">
                    <button type="submit" class="btn btn-default btn-submit">保存</button>
                    <a type="button" class="btn btn-default" href="javascript:history.back();">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>


<%- include('../common/footer') %>
